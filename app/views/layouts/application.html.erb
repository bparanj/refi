<!DOCTYPE html>
<html>
  <head>
    <title>Refi</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg.html_safe, :id => "flash_#{name}" %>
      <%- end -%>
            
      <%= yield %>
    </div>
  </body>
  
</html>
